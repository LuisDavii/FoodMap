<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context="com.example.foodmap.network.FoodScannerActivity">

    <!-- 1. Cabeçalho (Header) -->
    <!-- O botão SAIR foi substituído por VER HISTÓRICO -->
    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewLoggedInUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Olá, João!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:paddingStart="4dp"
            tools:ignore="RtlSymmetry" />

        <!-- Botão VER HISTÓRICO (Laranja de destaque) -->
        <Button
            android:id="@+id/buttonHistory"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_history"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:minWidth="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>

    </LinearLayout>

    <!-- 2. Linha Divisória -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 3. Instruções -->
    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/instructions_scan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 4. Área de Pré-visualização da Câmera -->
    <View
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/black"
        app:layout_constraintDimensionRatio="1:1.2"
        app:layout_constraintTop_toBottomOf="@id/textViewInstructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@id/buttonScan"
        tools:layout_height="350dp"
        android:elevation="6dp"
        android:outlineProvider="background"
        android:clipToOutline="true"
        android:alpha="0.9"
        tools:targetApi="31"/>

    <!-- 5. Botão de Scan (Laranja, Proeminente e com Borda Arredondada) -->
    <Button
        android:id="@+id/buttonScan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/botao_escanear"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="14dp"
        app:cornerRadius="16dp"
        app:backgroundTint="#FF9800"
        app:layout_constraintTop_toBottomOf="@+id/cameraPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 6. Cartão de Resultado (Agora com um botão de SALVAR) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonScan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analysis_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF9800"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="8dp"/>

            <TextView
                android:id="@+id/textViewFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Alimento: Brócolis Cozido"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textViewCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Calorias (100g): 34 kcal"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/textViewProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Proteína: 2.8g | Fibra: 2.6g"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"/>

            <!-- Novo Botão para SALVAR o Scan -->
            <Button
                android:id="@+id/buttonSaveScan"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/action_save_scan"
                android:textColor="#FF9800"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_border_orange" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
